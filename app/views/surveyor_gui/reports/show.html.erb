<script type="text/javascript">
function show_data() {
  var reps = document.getElementsByClassName('report_data');
  for (var i=0; i<reps.length; i++) {
    reps[i].style.visibility = 'visible';
  }
}

function hide_data() {
  var reps = document.getElementsByClassName('report_data');
  for (var i=0; i<reps.length; i++) {
    reps[i].style.visibility = 'hidden';
  }
}
</script>

<div class="row">
  <div class="col-md-12">
    <div class="panel-body">
      <div class="column3">
        <div class="shadebox round surveyor_gui_report">
          <div id="Survey">
            <h1 class="round-top"><%= @title %></h1>
            <h2><%= @survey.title %></h2>
            <span>
              <button class='show_data' onclick='show_data()'>Show Data</button>
              <button class='hide_data' onclick='hide_data()'>Hide Data</button>
            </span>
            <%= render 'show_report' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

